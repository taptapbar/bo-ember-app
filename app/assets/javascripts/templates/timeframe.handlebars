<div class="popup-window-bg">
  <div id="filter-window" class="popup-window">
  	<div class="popup-window-header">Timeframe setting</div>
  	<div class="popup-window-body">
  		<div id="timeframe-container">
        <form>
  			<ul class="none-style content-indent">
  				<li>Range</li>
  				<li>
  					<label class="radio">
              	<input type="radio" name="timeframeRangeRadios" value="" checked> All the data
          	</label>
          </li>
          <li class="li-datepicker clearfix">
          	<label class="radio pull-left">
              <input type="radio" name="timeframeRangeRadios" value="">
              <label for="timeframe-range-from" class="pull-left"><input type="text" id="timeframe-range-from" name="from"></label><span class="i-calendar pull-left"></span>
              <label for="timeframe-range-to" class="pull-left">to <input type="text" id="timeframe-range-to" name="to"></label><span class="i-calendar pull-left"></span>
          		<!-- <input type="radio" name="timeframeRangeRadios" value="">
          		<input class="pull-left datepicker" type="text" style="width:65px;">
          		<i class="i-calendar pull-left"></i>
              <input class="pull-left datepicker" type="text" style="width:65px;">
              <i class="i-calendar pull-left"></i> -->
            </label>
          </li>
        </ul>
        <ul class="none-style content-indent clearfix">
            <li>Cycle</li>
            <li class="clearfix">
              <ul class="none-style">
                <li class="float-left  seperator-right">
                  <label class="radio">
                    <input type="radio" name="cycle" data-panel="timeframe-cycle-all-panel" checked> All
                  </label>
                  <label class="radio">
                    <input type="radio" name="cycle" data-panel="timeframe-cycle-day-panel"> Day
                  </label>
                  <label class="radio">
                    <input type="radio" name="cycle" data-panel="timeframe-cycle-week-panel"> Week
                  </label>
                  <label class="radio">
                    <input type="radio" name="cycle" data-panel="timeframe-cycle-month-panel"> Month
                  </label>
                  <label class="radio">
                    <input type="radio" name="cycle" data-panel="timeframe-cycle-year-panel"> Year
                  </label>
                </li>
                
                <li class="float-left">
                  <div id="timeframe-cycle-all-panel" name="cycle-panel">
                    <!-- timeframe-cycle-all-panel -->
                    Default : Selected all data
                  </div>
                  <div id="timeframe-cycle-day-panel" name="cycle-panel" style="display:none;">
                    <!-- timeframe-cycle-day-panel -->
                    <label class="radio">
                      <input type="radio" name="cycle-day"> Every 
                        <select id="timeframe-cycle-day-select" class="select" style="width:60px;">
                          <option value="1">1st</option>
                          <option value="2">2nd</option>
                          <option value="3">3rd</option>
                          <option value="4">4th</option>
                          <option value="5">5th</option>
                          <option value="6">6th</option>
                          <option value="7">7th</option>
                        </select> Day
                    </label>
                    <label class="radio">
                      <input type="radio" name="cycle-day"> Every working day
                    </label>
                  </div>
                  <div id="timeframe-cycle-week-panel" name="cycle-panel" style="display:none;">
                    <!-- timeframe-cycle-week-panel -->
                    <ul class="none-style">
                      <li>
                        <ul class="none-style clearfix">
                          <li class="pull-left">
                            <label class="checkbox">
                              <input type="checkbox" name=" timeframe-cycle-week-checkbox" value="monday">Monday
                            </label>
                            <label class="checkbox">
                              <input type="checkbox" name="timeframe-cycle-week-checkbox" value="tuesday">Tuesday
                            </label>
                            <label class="checkbox">
                              <input type="checkbox" name="timeframe-cycle-week-checkbox" value="wedensday">Wedensday
                            </label>
                            <label class="checkbox">
                              <input type="checkbox" name="timeframe-cycle-week-checkbox" value="thursday">Thursday
                            </label>
                          </li>
                          <li class="pull-left">
                            <label class="checkbox">
                              <input type="checkbox" name=" timeframe-cycle-week-checkbox" value="friday">Friday
                            </label>
                            <label class="checkbox">
                              <input type="checkbox" name="timeframe-cycle-week-checkbox" value="saturday">Saturday
                            </label>
                            <label class="checkbox">
                              <input type="checkbox" name="timeframe-cycle-week-checkbox" value="sunday">Sunday
                            </label>
                          </li>
                        </ul>
                      </li>
                      <li>
                        <label>
                          ... of every
                          <select id="timeframe-cycle-week-select" class="select" style="width:60px;">
                          <option value="1">1st</option>
                          <option value="2">2nd</option>
                          <option value="3">3rd</option>
                          <option value="4">4th</option>
                          <option value="5">5th</option>
                        </select> Week
                        </label>  
                      </li>
                    </ul>
                  </div>
                  <div id="timeframe-cycle-month-panel" name="cycle-panel" style="display:none;">
                    <!-- timeframe-cycle-month-panel -->

                        <label class="radio">
                          <input type="radio" name="cycle-month"> Every 
                            <select id="timeframe-cycle-month-select-1" class="select" style="width:60px;">
                              <option value="1">1st</option>
                              <option value="2">2nd</option>
                              <option value="3">3rd</option>
                              <option value="4">4th</option>
                              <option value="5">5th</option>
                              <option value="6">6th</option>
                              <option value="7">7th</option>
                            </select>
                            day of <br>every 
                            <select id="timeframe-cycle-month-select-2" class="select" style="width:60px;">
                              <option value="1">1</option>
                              <option value="2">2</option>
                              <option value="3">3</option>
                              <option value="4">4</option>
                              <option value="5">5</option>
                              <option value="6">6</option>
                              <option value="7">7</option>
                              <option value="8">8</option>
                              <option value="9">9</option>
                              <option value="10">10</option>
                              <option value="11">11</option>
                              <option value="12">12</option>
                            </select> month
                        </label>
                        <br>
                        <label class="radio">
                          <input type="radio" name="cycle-month"> Every 
                            <select id="timeframe-cycle-month-select-3" class="select" style="width:60px;">
                              <option value="1">1st</option>
                              <option value="2">2nd</option>
                              <option value="3">3rd</option>
                              <option value="4">4th</option>
                              <option value="5">5th</option>
                              <option value="6">6th</option>
                              <option value="7">7th</option>
                            </select>
                            <select id="timeframe-cycle-month-select-4" class="select" style="width:100px;">
                              <option value="monday">Monday</option>
                              <option value="tuesday">Tuesday</option>
                              <option value="wednesday">Wednesday</option>
                              <option value="thursday">Thursday</option>
                              <option value="friday">Friday</option>
                              <option value="saturday">Saturday</option>
                              <option value="sunday">Sunday</option>
                            </select>
                            of <br>every 
                            <select id="timeframe-cycle-month-select-4" class="select" style="width:60px;">
                              <option value="1">1</option>
                              <option value="2">2</option>
                              <option value="3">3</option>
                              <option value="4">4</option>
                              <option value="5">5</option>
                              <option value="6">6</option>
                              <option value="7">7</option>
                              <option value="8">8</option>
                              <option value="9">9</option>
                              <option value="10">10</option>
                              <option value="11">11</option>
                              <option value="12">12</option>
                            </select> month
                        </label>

                  </div>
                  <div id="timeframe-cycle-year-panel" name="cycle-panel" style="display:none;">
                    <!-- timeframe-cycle-year-panel -->
                  </div>
                </li>
              </ul>
            </li>
  			  </ul>
        </form>
  		</div>
  	</div>
  	<div class="popup-window-footer">
    	<button class="btn-popup " {{ action "resetTimeScope" this }}>Reset</button>
    	<button type="submit" class="btn-popup pull-right" {{ action "confirmTimeScope" this }}>Confirm</button>
    	<button class="btn-popup pull-right" {{ action "closeModalView" this }}>Cancel</button>
  </div>
  </div>
</div>