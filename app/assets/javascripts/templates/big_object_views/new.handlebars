<div id="create-new-view-container">
  <div id="create-view-container">
    <section class="step clearfix">
      <!-- <h2>Create your view</h2> -->
      
      <form>
        <div class="sub-step">
          <h3><span class="step-num">1.</span> Select up to 3 dimensions</h3>
          {{ view App.SelectDimensionsView }}
        </div>
    
        <div class="sub-step">
          <h3><span class="step-num">2.</span> Choose the measure</h3>
      
          <div class="half-inner">
            <div class="clearfix">
              {{#each measure in App.formData.measures}}
              <label class="radio">
                <input type="radio" name="measure" {{bindAttr value="measure"}}>{{ measure }}
              </label>
              {{/each}}
            </div>
          </div>
          <h3><span class="step-num">3.</span> Name this view</h3>

          <div class="half-inner">
            <div class="clearfix">
              Title: 
              <input id="create-new-view-title" type="text" name="title" value="" placeholder="Name the view..." style="width: 190px">
            </div>
          </div>
        </div>
      </form>
      
      
    </section>
    <div class="clearfix">
        <div class="filters-container">
          <div class="filters clearfix" style="margin-left: 10px">
            <div class="filter"><a {{ action "showTimescopeModal" this }}>Set Time Scope</a></div>
            <div class="filter"><a {{ action "showFilterModal" this }}>Set Filter</a></div>
          </div>
        </div>
        
        <div class="actions-container">
            <div class="error-message"></div>
            <div class="actions">
              <div class="action">
                <a id="create-new-view-reset" type="reset" class="reset" {{ action "resetForm" this }}>Reset</a>
                <a class="" {{ action "cancelCreateView" this }}>Cancel</a>
                <a id="create-new-view-confirm" type="" class="" {{ action "createNewView" this }}>Confirm</a>
              </div>
            </div>
          
        </div>
      </div>
  </div>
  
